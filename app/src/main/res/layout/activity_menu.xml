<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.alexizzo.QRReader.activities.MenuActivity">

    <include
        android:id="@+id/action_bar"
        layout="@layout/actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:layout_alignParentTop="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_list"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/action_bar"
        android:layout_centerHorizontal="true"
        android:text="Go to list"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_camera"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/b_list"
        android:layout_marginTop="4dp"
        android:text="Go to camera"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_zxhing"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/b_camera"
        android:layout_marginTop="4dp"
        android:text="Go to zxhing"/>


</RelativeLayout>
